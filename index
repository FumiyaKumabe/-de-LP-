    <script>
        // Accordion functionality
        function toggleAccordion(header) {
            const content = header.nextElementSibling;
            const icon = header.querySelector('.accordion-icon');

            if (content.classList.contains('active')) {
                content.classList.remove('active');
                content.style.maxHeight = null;
                icon.classList.remove('rotate');
            } else {
                // Close all other active accordions
                document.querySelectorAll('.accordion-content.active').forEach(item => {
                    item.classList.remove('active');
                    item.style.maxHeight = null;
                    item.previousElementSibling.querySelector('.accordion-icon').classList.remove('rotate');
                });

                content.classList.add('active');
                content.style.maxHeight = content.scrollHeight + "px";
                icon.classList.add('rotate');
            }
        }

        // Chart.js initialization
        document.addEventListener('DOMContentLoaded', () => {
            const barCtx = document.getElementById('barChart').getContext('2d');
            const barChart = new Chart(barCtx, {
                type: 'bar',
                data: {
                    labels: ['タイムカード回収', '給与明細作成・配布', '日報収集・管理', '上下番電話連絡', 'シフト作成・配布', '集計・その他管理業務'],
                    datasets: [
                        {
                            label: 'Before',
                            data: [16, 12, 20, 10, 12, 15],
                            backgroundColor: '#E57373', // Reddish color
                            borderRadius: 4,
                        },
                        {
                            label: 'After',
                            data: [3, 2, 3, 1, 2, 9.8],
                            backgroundColor: '#81C784', // Greenish color
                            borderRadius: 4,
                        }
                    ]
                },
                options: {
                    indexAxis: 'y', // Horizontal bars
                    responsive: true,
                    maintainAspectRatio: false,
                    animation: false, // Disable animation for faster rendering
                    scales: {
                        x: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: '時間 (h)',
                                font: {
                                    size: 14,
                                    weight: 'bold'
                                },
                                color: '#4a5568'
                            },
                            grid: {
                                color: '#E0E0E0',
                            },
                            ticks: {
                                font: {
                                    size: 12
                                },
                                color: '#4a5568'
                            }
                        },
                        y: {
                            grid: {
                                display: false, // Hide vertical grid lines
                            },
                            ticks: {
                                font: {
                                    size: 14,
                                    weight: 'bold'
                                },
                                color: '#4a5568'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false, // Hide legend as it's shown below the chart
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.x !== null) {
                                        label += context.parsed.x + 'h';
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            // Plugin for center text in Doughnut chart
            const centerTextPlugin = {
                id: 'centerText',
                beforeDraw(chart) {
                    const { ctx, width, height } = chart;
                    ctx.save();

                    const text = '76.8%';
                    const subText = '削減';

                    // Calculate font size dynamically
                    const mainFontSize = Math.min(height, width) / 5.5;
                    ctx.font = `900 ${mainFontSize}px 'Noto Sans JP'`; // Use Noto Sans JP
                    ctx.fillStyle = '#005FB8'; // Primary blue color
                    ctx.textAlign = 'center';
                    ctx.textBaseline = 'middle';

                    const textX = width / 2;
                    const textY = height / 2 - (mainFontSize * 0.3); // Adjust position slightly up

                    ctx.fillText(text, textX, textY);

                    const subFontSize = Math.min(height, width) / 10;
                    ctx.font = `bold ${subFontSize}px 'Noto Sans JP'`; // Use Noto Sans JP
                    ctx.fillStyle = '#333333'; // Dark gray for subtext
                    ctx.fillText(subText, textX, textY + (mainFontSize * 0.8)); // Position below main text

                    ctx.restore();
                }
            };

            const pieCtx = document.getElementById('pieChart').getContext('2d');
            const pieChart = new Chart(pieCtx, {
                type: 'doughnut',
                data: {
                    labels: ['削減', '導入後'],
                    datasets: [{
                        data: [76.8, 23.2], // Data for the pie chart
                        backgroundColor: [
                            '#005FB8', // Blue for "削減" (Reduction)
                            '#D1D5DB'  // Light gray for "導入後" (After Introduction)
                        ],
                        hoverOffset: 4,
                        borderWidth: 0,
                        cutout: '70%', // Creates the doughnut hole
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    animation: false, // Disable animation for faster rendering
                    plugins: {
                        legend: {
                            display: false, // Hide legend as it's shown below the chart
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed !== null) {
                                        label += context.parsed + '%';
                                    }
                                    return label;
                                }
                            }
                        },
                        centerText: centerTextPlugin // Apply the custom plugin
                    }
                },
                plugins: [centerTextPlugin] // Register the plugin
            });
        });
    </script>
</body>
</html>
